<root xmlns="urn:schemas-upnp-org:device-1-0">
	<specVersion>
		<major>1</major>
		<minor>0</minor>
	</specVersion>
	<device>
		<deviceType>urn:schemas-upnp-org:device:basic:1</deviceType>
		<friendlyName>{name}</friendlyName> <!-- or "model[number] serial" -->
		<manufacturer>{manufacturer[name]}</manufacturer>
		<manufacturerURL>{manufacturer[URL]}</manufacturerURL>
		<modelDescription>{model[description]}</modelDescription>
		<modelName>{model[name]}</modelName>
		<modelNumber>{model[number]}</modelNumber>
		<modelURL>{model[url]}</modelURL>
		<serialNumber>{serial}</serialNumber>
		<UDN>
			uuid:{UDN}-{MAC}
		</UDN>  <!-- we either need a smarter json, or custom templates -->
		<!--UPC>{UPC}</UPC-->  <!-- this seems to be a FLIR-only value? -->
		<serviceList>
			<service>
                <!-- there can be multiple services... how do we describe them with just a template? -->
				<serviceType/>
				<serviceId/>
				<controlURL/>
				<eventSubURL/>
				<SCPDURL/>
			</service>
		</serviceList>
		<presentationURL>http://[address]:[port]</presentationURL>
		<buildDate>{build_date}</buildDate>
	</device>
</root>
